<?xml version="1.0" encoding="UTF-8" ?>
<Configuration>
    <Appenders>
        <Console name="LogToConsole">
            <PatternLayout pattern="%d{HH:mm:ss,SSS} %level %c{1} - %msg%n %ex{0}"/>
        </Console>
    </Appenders>


    <Loggers>
        <Root level="info">
            <AppenderRef ref="LogToConsole"/>
        </Root>
    </Loggers>
</Configuration>